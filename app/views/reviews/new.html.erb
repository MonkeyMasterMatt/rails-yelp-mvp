<div class="container">
  <h1>Create a new review for <%= @restaurant.name %></h1>

  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content, label: 'What is your review?', error: 'Content is mandatory, please specify one' %>
    <%= f.input :rating, collection: 0..5, label: 'What is your rating?' %>
    <%= f.submit "add a new review", class: "btn btn-primary"%>
  <% end %>
</div>

