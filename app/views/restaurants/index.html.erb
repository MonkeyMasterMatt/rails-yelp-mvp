<div class="container">

  <h1>All restaurants</h1>

  <% @restaurants.each do |restaurant| %>
  <ul class="list-group">
    <li class="list-group-item"> <%= link_to restaurant.name, restaurant_path(restaurant) %> (<%= restaurant.address %>)</li>

  </ul>
  <% end %>

  <%= link_to "Add a New Restaurant", new_restaurant_path %>

</div>
